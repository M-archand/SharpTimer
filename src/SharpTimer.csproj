<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
        <OutputPath>$(ProjectDir)..\Build\addons\counterstrikesharp\plugins\SharpTimer\</OutputPath>
		<GenerateDependencyFile>false</GenerateDependencyFile>
        <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
        <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
    </PropertyGroup>
	
    <ItemGroup>
        <PackageReference Include="CounterStrikeSharp.API" Version="*">
			<PrivateAssets>none</PrivateAssets>
			<ExcludeAssets>runtime</ExcludeAssets>
			<IncludeAssets>compile; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
		</PackageReference>
        <PackageReference Include="Nexd.MySQL" Version="1.0.2" />
        <PackageReference Include="Npgsql" Version="8.0.3" />
        <PackageReference Include="System.Data.SQLite" Version="1.0.118" />
        <ProjectReference Include="..\SharpTimerAPI\SharpTimerAPI.csproj" />
        <Reference Include="API/TagsApi.dll" />
    </ItemGroup>

    <Target Name="CopyCfgFolder" AfterTargets="Build">
        <ItemGroup>
            <CfgFiles Include="$(ProjectDir)..\cfg\SharpTimer\**\*.*" />
        </ItemGroup>
        <Copy
            SourceFiles="@(CfgFiles)"
            DestinationFiles="@(CfgFiles->'$(ProjectDir)..\Build\cfg\SharpTimer\%(RecursiveDir)%(Filename)%(Extension)')"
            SkipUnchangedFiles="true" />
    </Target>

    <Target Name="CopygamedataFolder" AfterTargets="Build">
    <ItemGroup>
        <GamedataFiles Include="$(ProjectDir)..\gamedata\**\*.*" />
    </ItemGroup>
    <Copy
        SourceFiles="@(GamedataFiles)"
        DestinationFiles="@(GamedataFiles->'$(ProjectDir)..\Build\addons\counterstrikesharp\gamedata\%(RecursiveDir)%(Filename)%(Extension)')"
        SkipUnchangedFiles="true" />
    </Target>

    <Target Name="CopyLangFolder" AfterTargets="Build">
    <ItemGroup>
        <LangFiles Include="$(ProjectDir)..\lang\**\*.*" />
    </ItemGroup>
    <Copy
        SourceFiles="@(LangFiles)"
        DestinationFiles="@(LangFiles->'$(OutputPath)\lang\%(RecursiveDir)%(Filename)%(Extension)')"
        SkipUnchangedFiles="true" />
    </Target>

    <Target Name="CopyBDFolder" AfterTargets="Build">
    <ItemGroup>
        <BDFiles Include="$(ProjectDir)..\src\DB\Migrations\**\*.*" />
    </ItemGroup>
    <Copy
        SourceFiles="@(BDFiles)"
        DestinationFiles="@(BDFiles->'$(OutputPath)\Database\Migrations\%(RecursiveDir)%(Filename)%(Extension)')"
        SkipUnchangedFiles="true" />
    </Target>

    <Target Name="ExcludeStoreApiFiles" AfterTargets="Build">
		<Delete Files="$(OutputPath)SharpTimer.pdb" />
		<Delete Files="$(OutputPath)SharpTimerAPI.dll" />
		<Delete Files="$(OutputPath)TagsAPI.dll" />
    </Target>
</Project>